    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Attach docker",
            "port": 9229,
            "address": "localhost",
            "restart": true,
            "sourceMaps": false,
            // "outFiles": "/wishapp",
            "localRoot": "${workspaceRoot}",
            "remoteRoot": "/strawberry",
            "env":{
                "NODE_ENV": "docker"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/persistence/test.js",
            "env":{
                "NODE_ENV": "test"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "startServer",
            "program": "${workspaceFolder}/bin/www",
            "env":{
                "NODE_ENV": "test"
            }
        }
    ]
}