    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "async_wrapper",
            "program": "${workspaceFolder}/async_wrapper.js"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach docker",
            "port": 9229,
            "address": "localhost",
            "restart": true,
            "sourceMaps": false,
            // "outFiles": "/wishapp",
            "localRoot": "${workspaceRoot}",
            "remoteRoot": "/strawberry",
            "env":{
                "NODE_ENV": "docker"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "sequelize test",
            "program": "${workspaceFolder}/persistence/test.js",
            "env":{
                "NODE_ENV": "test"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "startServer",
            "program": "${workspaceFolder}/bin/www",
            "protocol": "inspector",
            "runtimeArgs": [// args passed to node
                "--inspect-brk",
                "--async-stack-traces"
                // "${workspaceRoot}/node_modules/.bin/jest",
            ],
            "args": [],// args passed to program (www here)
            "port": 9229,
            "env":{
                "NODE_ENV": "test"
            }
        }
    ]
}