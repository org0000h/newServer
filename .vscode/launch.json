    "version": "0.2.0",
    "configurations": [
    {
        "name": "Attach docker",
        "type": "node",
        "request": "attach",
        "port": 9229,
        "address": "localhost",
        "restart": true,
        "sourceMaps": false,
        "outDir": null,
        "localRoot": "${workspaceRoot}",
        "remoteRoot": "/wishapp"
    },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/persistence/test.js",
            "env":{
                "NODE_ENV": "test"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "startServer",
            "program": "${workspaceFolder}/bin/www",
            "env":{
                "NODE_ENV": "test"
            }
        }
    ]
}